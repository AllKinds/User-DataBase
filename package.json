{
  "name": "kartoffel",
  "version": "0.2.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run delete-dist-folder && npm run tslint && npm run build-ts",
    "serve": "node -r dotenv/config dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": " npm run build && mocha --reporter mochawesome dist/**/spec.helper.js dist/**/*.spec.js dist/**/**/*.spec.js --timeout 0",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "delete-dist-folder": "node scripts/deleteDistFolder.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "Yonatan Tal",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "connect-mongo": "^1.3.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.15.4",
    "express-session": "^1.15.5",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "lusca": "^1.5.0",
    "mongoose": "^4.13.11",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-oauth2": "^1.4.0",
    "request": "^2.81.0",
    "rimraf": "^2.6.2",
    "shelljs": "^0.7.8",
    "sinon": "^3.3.0",
    "swagger-tools": "^0.10.4",
    "swagger-ui": "^3.17.6",
    "tslint-config-airbnb": "^5.3.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.2",
    "@types/connect-mongo": "0.0.33",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.0",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.36",
    "@types/express-session": "^1.15.2",
    "@types/jquery": "^3.2.11",
    "@types/lodash": "^4.14.73",
    "@types/mocha": "^2.2.41",
    "@types/mongodb": "^2.2.9",
    "@types/mongoose": "^4.7.19",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.20",
    "@types/passport": "^0.3.3",
    "@types/request": "^2.0.0",
    "@types/sinon": "^2.3.5",
    "@types/yamljs": "^0.2.30",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "concurrently": "^3.5.0",
    "mocha": "^3.5.0",
    "mochawesome": "^3.0.3",
    "node-sass": "^4.9.2",
    "nodemon": "^1.11.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  }
}
